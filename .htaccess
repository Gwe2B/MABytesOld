RewriteEngine On

RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{HTTP_HOST} ^mabytes
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

Options -Indexes -MultiViews

# protect .htaccess
<Files ~ "^.*\.([Hh][Tt][Aa])">
	Order allow,deny
	Deny from all
	Satisfy all
</Files>

<Files ~ "^.*\.conf\.json$">
    Order allow,deny
    Deny from all
</Files>